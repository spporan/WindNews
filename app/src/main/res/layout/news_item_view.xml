<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/common_padding_medium"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?appCardBackgroundColor"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/common_padding_small"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/image"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundImageShape"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?primaryTextColor"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:paddingHorizontal="@dimen/common_padding_medium"
                android:textSize="@dimen/primary_text_size"
                tools:text="Binance Immense XRP Holdings Exposed In Detailed Proof of Reserves Report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/common_padding_small"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?secondaryTextColor"
                android:paddingHorizontal="@dimen/common_padding_medium"
                android:textSize="@dimen/primary_text_size"
                tools:text="A fully functional Android app built entirely with Kotlin and Jetpack Compose. This monorepo stores all code and assets of all projects with which we develop regels.overheid.nl"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>